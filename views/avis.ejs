<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service</title>
    <link rel="stylesheet" href="Style/accueil.css">
    <style>
        h1 {
            font-family: 'Inter';
font-style: normal;
font-weight: 500;
font-size: 46px;
line-height: 56px;  
color: white;
        }

        #div-footer{
    width: 460px;
    height: 206px;
    display: flex;
    flex-wrap: wrap;
    margin: 145px auto;
}
    </style>

    <%- include("partials/header.ejs") %>

    <div class="container">
        <h1>Gestion des Avis - <%= user.role_name %></h1>

        <div class="avis-container" id="espace-avis">
            <% avisList.forEach(function(avis) { %>
                <div class="avis-users">
                    <h3><%= avis.pseudo %></h3>
                    <p><%= avis.commentaire %></p>
                    <div class="buttons">
                        <form action="/avis/<%= avis.id %>/valider" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-outline-success">Valider</button>
                        </form>
                        <form action="/avis/<%= avis.id %>/rejeter" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-outline-danger">Rejeter</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>

    <footer id="footer">
        <div id="div-footer">
            <a href="/"><img src="/Assets/Logo ARCADIA.png" alt="Logo arcadia" id="Logo-footer"></a>
            <small id="copyright">Copyright © <span id="year"></span> Arcadia.fr. Tous droits réservés.</small>
        </div>
    </footer>
        
    
    <script src="Script/index.js"></script>
    <script src="Script/api.js"></script>
    <script src="Script/profil.js"></script>
    <script src="Script/service.js"></script>
    <script src="Script/avis.js"></script>

    
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
    </html>